<!DOCTYPE html>
<html ng-app="conservar">
<head>
  <title>Conservar</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar-fixed-top"> 
    <div class="col-md-2" style="padding:0;">
      <div class="navbar navbar-default nav-green" role="navigation" style="padding-left:15px">      
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><i class="fa fa-recycle"></i> Conservar</a>
        </div>
      </div>
    </div>
    <div class="col-md-10" style="padding:0px;border-left: solid 1px #1b926c;">
      <div class="navbar navbar-default nav-green" role="navigation">        
        <ul class="nav navbar-nav">
          <form class="navbar-form navbar-left" id="search-form" role="search">
            <div class="control-form">
              <input type="text" class="form-control" placeholder="Buscar items o colecciones ... ">
              <i class="fa fa-search"></i>
            </div>
          </form>
        </ul>
        <ul class="nav navbar-nav navbar-right settings">
          <li class="dropdown" on-toggle="toggled(open)">
            <a href class="dropdown-toggle">
              <i class="fa fa-bars"></i>
            </a>
            <ul class="dropdown-menu">
              <li>
                <a href="#">Settings</a>
                <a href="#">Users</a>
                <a href="#">Admin</a>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="side-bar" style="">
    <div class="profile-box">
      <div class="user">
        <h4>Jorge Moreno</h4>
        <a href="#"><i class="fa fa-cog"></i>  Profile</a>
        <a href="#"><i class="fa fa-sign-out"></i> Salir</a>
      </div>
    </div>
    <ul class="list-group">
      <li class="list-group-item" ui-sref-active="active">
        <a href='#/collections' ui-sref="collections"><i class="fa fa-tags"></i> Items</a>
      </li>
      <li class="list-group-item" ui-sref-active="active">
        <a href="#"><i class="fa fa-camera"></i> Imagenes</a>
      </li>
      <li class="list-group-item" ui-sref-active="active">
        <a href="#/treatments" ui-sref="treatment"><i class="fa fa-bars"></i> Tratamientos</a>
      </li>
      <li class="list-group-item"><a href="#"><i class="fa fa-bar-chart-o"></i> Reportes</a></li>
      <li class="list-group-item"><a href="#"><i class="fa fa-search"></i> Analisis</a></li>
      <li class="list-group-item"><a href="#"><i class="fa fa-users"></i> Organizacion</a></li>
    </ul>
  </div>
  <div ui-view="main" class="main-content clearfix"></div>

</body>
</html>
